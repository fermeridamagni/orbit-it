{
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2024",
    "lib": ["es2024"],
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@lib/*": ["src/lib/*"],
      "@services/*": ["src/lib/services/*"],
      "@utils/*": ["src/utils/*"],
      "@schemas/*": ["src/schemas/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "build", ".turbo"]
}
