{
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2024",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@lib/*": ["src/lib/*"],
      "@schemas/*": ["src/schemas/*"],
      "@commands/*": ["src/commands/*"],
      "@utils/*": ["src/utils/*"]
    }
  },
  "exclude": ["node_modules", "build", ".turbo"],
  "include": ["src"]
}
