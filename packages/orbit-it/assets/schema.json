{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "description": "The path to the Orbit It schema file",
      "default": "node_modules/orbit-it/assets/schema.json",
      "type": "string"
    },
    "project": {
      "description": "Project configuration",
      "type": "object",
      "properties": {
        "type": {
          "description": "The type of project to manage",
          "type": "string",
          "enum": [
            "monorepo",
            "single-package"
          ]
        }
      },
      "required": [
        "type"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "$schema",
    "project"
  ],
  "additionalProperties": false
}