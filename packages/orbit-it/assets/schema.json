{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "$schema": {
      "description": "The path to the Orbit It schema file",
      "default": "node_modules/orbit-it/assets/schema.json",
      "type": "string"
    },
    "project": {
      "description": "Project configuration",
      "type": "object",
      "properties": {
        "version": {
          "description": "The version of the project if it is a monorepo and the versioning strategy is fixed",
          "default": "0.0.0",
          "type": "string"
        },
        "type": {
          "description": "The type of project to manage",
          "type": "string",
          "enum": [
            "monorepo",
            "single-package"
          ]
        },
        "packageManager": {
          "description": "The package manager used in the project",
          "default": "npm",
          "type": "string",
          "enum": [
            "npm",
            "yarn",
            "pnpm"
          ]
        },
        "environment": {
          "description": "The runtime environment for the project",
          "default": "unknown",
          "type": "string",
          "enum": [
            "nodejs",
            "python",
            "unknown"
          ]
        },
        "workspaces": {
          "description": "The workspaces in the project",
          "default": [
            "packages/*",
            "apps/*"
          ],
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "type",
        "environment"
      ],
      "additionalProperties": false
    },
    "release": {
      "type": "object",
      "properties": {
        "strategy": {
          "description": "The release strategy to use. Auto means releases are managed automatically, manual means you control when releases happen.",
          "default": "auto",
          "type": "string",
          "enum": [
            "auto",
            "manual"
          ]
        },
        "versioningStrategy": {
          "description": "The versioning strategy to use. Fixed means all packages share the same version, independent means each package can have its own version.",
          "default": "fixed",
          "type": "string",
          "enum": [
            "fixed",
            "independent"
          ]
        },
        "preReleaseIdentifier": {
          "description": "An optional pre-release identifier to append to versions, e.g., \"alpha\", \"beta\", etc.",
          "default": "beta",
          "type": "string"
        }
      },
      "required": [
        "strategy",
        "versioningStrategy",
        "preReleaseIdentifier"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "project",
    "release"
  ],
  "additionalProperties": false
}